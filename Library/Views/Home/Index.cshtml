@model IEnumerable<Library.Models.Libery>

@{
    ViewData["Title"] = "Index";
}

<h1>רשימת הספריות</h1>

<p>
    <a asp-action="Create">צור ספרייה חדשה</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.zzaner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.zzaner)
            </td>
            <td>
                    @Html.ActionLink("הוספת מדף לספרייה", "AddShelf", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

